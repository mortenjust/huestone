<?xml version="1.0" encoding="utf-8"?>
<com.mortenjust.huestone.controller.SliderRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/brightnessSlider"
        android:progressDrawable="@drawable/light_brightness_progress"
        android:thumb="@drawable/thumb"
        android:progress="60"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:max="255"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightName"
        android:text="Bathroom"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:textColor="#fff"
        android:alpha="0.8"
        android:fontFamily="sans-serif-light"
        android:textSize="23sp"
        />



</com.mortenjust.huestone.controller.SliderRelativeLayout>